<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="RtlCompat,HardcodedText">

    <TextView
        android:id="@+id/tv_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/ll_behavior"
        android:background="#DEDEDE" />

    <ImageView
        android:id="@+id/iv_content_big"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@null"
        android:src="@mipmap/icon_notification_music_placeholder" />

    <LinearLayout
        android:id="@+id/ll_title_and_summery"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/iv_cancel_big"
        android:layout_toEndOf="@+id/iv_content_big"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_big"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_summery_big"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="summery"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_cancel_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@null"
        android:padding="8dp"
        android:src="@mipmap/icon_notification_music_delete" />

    <LinearLayout
        android:id="@+id/ll_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title_and_summery"
        android:layout_toEndOf="@id/iv_content_big"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_love_big"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@mipmap/icon_notification_music_love" />

        <ImageView
            android:id="@+id/iv_pre_big"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@mipmap/icon_notification_music_pre" />

        <ImageView
            android:id="@+id/iv_play_or_pause_big"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@mipmap/icon_notification_music_pause" />

        <ImageView
            android:id="@+id/iv_next_big"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@mipmap/icon_notification_music_next" />

        <ImageView
            android:id="@+id/iv_lyrics_big"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@mipmap/icon_notification_music_lyc" />
    </LinearLayout>

</RelativeLayout>