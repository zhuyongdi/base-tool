<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="PxUsage"
    tools:layout_height="300px"
    tools:layout_width="300px">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#484848"
        android:contentDescription="@null" />

    <RelativeLayout
        android:id="@+id/rl_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15px">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_unselect"
            android:contentDescription="@null" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_videoTimeLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_videoTimeLength"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginEnd="20px"
            android:layout_marginRight="20px"
            android:background="@mipmap/icon_video"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_videoTimeLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#FFFFFF"
            tools:text="3:57" />

    </LinearLayout>

    <View
        android:id="@+id/v_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="invisible" />

</RelativeLayout>
