<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="800px"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_shape_permission"
    android:paddingLeft="50px"
    android:paddingTop="80px"
    android:paddingRight="50px"
    android:paddingBottom="80px"
    tools:ignore="PxUsage,HardcodedText,RtlHardcoded">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:textColor="#333333"
        android:textSize="30px"
        android:textStyle="bold"
        tools:text="未取得您的麦克风使用权限，此功能无法使用。请前往应用权限设置打开权限" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="325px"
        android:layout_height="78px"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="80px"
        android:background="@drawable/dialog_btn_shape_permission1"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="取消"
        android:textColor="#FF8C68"
        android:textSize="28px" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="325px"
        android:layout_height="78px"
        android:layout_below="@id/tv_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="80px"
        android:layout_toRightOf="@id/tv_cancel"
        android:background="@drawable/dialog_btn_shape_permission2"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="确认"
        android:textColor="#FFFFFF"
        android:textSize="28px" />

</RelativeLayout>
